<div class="min-h-screen py-16 flex items-center justify-center bg-gray-50 dark:bg-gray-900">
  <div class="glass-card max-w-md w-full p-8 md:p-12">
    <div class="text-center mb-8">
      <a href="/" class="text-2xl font-display font-bold text-gray-900 dark:text-white">
        Dawid<span class="text-primary-600 dark:text-primary-400">Kocma</span>
      </a>
      <h2 class="text-2xl font-bold mt-6">Sign In</h2>
      <p class="text-gray-600 dark:text-gray-400 mt-2">Welcome back! Please sign in to your account.</p>
    </div>
    
    <% if (error) { %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p><%= error %></p>
      </div>
    <% } %>
    
    <form action="/auth/login" method="POST" class="space-y-6">
      <input type="hidden" name="redirect" value="<%= redirect %>">
      
      <div>
        <label for="email" class="block text-gray-700 dark:text-gray-300 mb-2">Email Address</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          class="w-full px-4 py-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-primary-500"
          required
        >
      </div>
      
      <div>
        <div class="flex justify-between mb-2">
          <label for="password" class="text-gray-700 dark:text-gray-300">Password</label>
          <a href="#" class="text-sm text-primary-600 dark:text-primary-400 hover:underline">Forgot Password?</a>
        </div>
        <input 
          type="password" 
          id="password" 
          name="password" 
          class="w-full px-4 py-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-primary-500"
          required
        >
      </div>
      
      <div class="flex items-center">
        <input 
          type="checkbox" 
          id="remember" 
          name="remember" 
          class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
        >
        <label for="remember" class="ml-2 block text-gray-700 dark:text-gray-300">Remember me</label>
      </div>
      
      <button 
        type="submit" 
        class="w-full btn btn-primary py-3"
      >
        Sign In
      </button>
    </form>
    
    <div class="text-center mt-8">
      <p class="text-gray-600 dark:text-gray-400">
        Don't have an account? 
        <a href="/auth/register" class="text-primary-600 dark:text-primary-400 hover:underline">Sign up</a>
      </p>
    </div>
  </div>
</div>