<!-- Hero Section -->
<section class="relative overflow-hidden py-16 md:py-24 lg:py-32 bg-gradient-to-br from-white to-gray-100 dark:from-dark-bg dark:to-gray-900">
  <div class="container mx-auto px-4 flex flex-col lg:flex-row items-center">
    <!-- Hero Content -->
    <div class="flex-1 lg:pr-12 mb-12 lg:mb-0 fade-in" style="animation-delay: 0.1s;">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight">
        Hi, I'm <span class="text-primary-600 dark:text-primary-400">Dawid Kocma</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-8">
        Software engineer and web developer with a passion for creating elegant, user-friendly applications.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="/projects" class="btn btn-primary">
          View My Work
        </a>
        <a href="/contact" class="btn btn-secondary">
          Get In Touch
        </a>
      </div>
    </div>
    
    <!-- Hero Image -->
    <div class="flex-1 fade-in" style="animation-delay: 0.3s;">
      <div class="relative mx-auto max-w-md lg:max-w-full">
        <div class="glass-card rounded-2xl overflow-hidden shadow-2xl">
          <!-- Replace with your actual profile image -->
          <img 
            src="/images/profile-hero.jpg" 
            alt="Dawid Kocma" 
            class="w-full h-auto"
            onerror="this.src='/images/profile-placeholder.jpg'"
          >
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="hidden lg:block absolute top-1/4 left-10 w-16 h-16 rounded-full bg-primary-500/20 dark:bg-primary-500/10 blur-xl parallax" data-speed="0.1"></div>
  <div class="hidden lg:block absolute bottom-1/4 right-10 w-24 h-24 rounded-full bg-primary-500/20 dark:bg-primary-500/10 blur-xl parallax" data-speed="-0.1"></div>
  <div class="hidden lg:block absolute top-1/2 left-1/3 w-12 h-12 rounded-full bg-primary-500/20 dark:bg-primary-500/10 blur-xl parallax" data-speed="0.05"></div>
</section>

<!-- Featured Projects Section -->
<section class="py-16 md:py-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-4">Featured Projects</h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Check out some of my recent work
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% if (featuredProjects && featuredProjects.length > 0) { %>
        <% featuredProjects.forEach((project, index) => { %>
          <div class="glass-card overflow-hidden transition-all duration-300 hover:shadow-xl slide-up" style="animation-delay: <%= 0.1 + (index * 0.1) %>s;">
            <div class="relative aspect-video overflow-hidden">
              <% if (project.coverImage) { %>
                <img 
                  src="<%= project.coverImage %>" 
                  alt="<%= project.title %>" 
                  class="w-full h-full object-cover transition-all duration-500 hover:scale-105"
                >
              <% } else { %>
                <div class="w-full h-full bg-gray-200 dark:bg-gray-800 flex items-center justify-center">
                  <span class="text-gray-400 dark:text-gray-600">No image</span>
                </div>
              <% } %>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2"><%= project.title %></h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4"><%= project.shortDescription %></p>
              <div class="flex flex-wrap gap-2 mb-4">
                <% project.technologies.slice(0, 3).forEach(tech => { %>
                  <span class="inline-block px-2 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-800 text-gray-800 dark:text-gray-200">
                    <%= tech %>
                  </span>
                <% }) %>
                <% if (project.technologies.length > 3) { %>
                  <span class="inline-block px-2 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-800 text-gray-800 dark:text-gray-200">
                    +<%= project.technologies.length - 3 %> more
                  </span>
                <% } %>
              </div>
              <a href="/projects/<%= project.slug %>" class="text-primary-600 dark:text-primary-400 font-medium inline-flex items-center">
                View Project
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="md:col-span-2 lg:col-span-3 text-center">
          <p class="text-gray-600 dark:text-gray-400">No featured projects available yet.</p>
        </div>
      <% } %>
    </div>
    
    <div class="text-center mt-12">
      <a href="/projects" class="btn btn-primary">
        View All Projects
      </a>
    </div>
  </div>
</section>

